<Window x:Class="PuppetViewerWPF.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Width="1000" Height="750">

    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        
        <Border Background="#00000000" CornerRadius="10" Grid.Column="1" Grid.Row="1">
            <StackPanel x:Name="PlayerPanel" Orientation="Vertical" />
            <!--<TextBlock Name="PlayerText" Text="Player Puppet Name" Foreground="White" Background="#00000000"  FontSize="18" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="30,30,10,10" TextWrapping="Wrap"/>
            -->
        </Border>
        <Border Background="#00000000" CornerRadius="10" Grid.Column="2" Grid.Row="1">
            <StackPanel x:Name="EnemyPanel" Orientation="Vertical" />
            <!--<TextBlock Name="EnemyText"  Text="Enemy Puppet Name" Foreground="White" Background="#00000000" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,30,30,10" TextWrapping="Wrap"/>
            -->
        </Border>
    </Grid>
</Window>