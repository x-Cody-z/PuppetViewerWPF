<Window x:Class="PuppetViewerWPF.Calc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PuppetViewerWPF"
        mc:Ignorable="d"
        Title="Damage Calculator" Height="600" Width="1200">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <!-- Top Buttons + Title -->
            <RowDefinition Height="7*"/>
            <!-- Main Content -->
        </Grid.RowDefinitions>

        <!-- Top Buttons and Title -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Buttons -->
            <UniformGrid Grid.Column="0" Columns="3" Rows="2">
                <Button Content="B1" Click="Button_Click"/>
                <Button Content="B2"/>
                <Button Content="B3"/>
                <Button Content="B4"/>
                <Button Content="B5"/>
                <Button Content="B6"/>
            </UniformGrid>

            <!-- Title -->
            <TextBlock Grid.Column="1" Text="Title" FontSize="24" FontStyle="Italic" 
                       VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20"/>

            <!-- Right Buttons -->
            <UniformGrid Grid.Column="2" Columns="3" Rows="2">
                <Button Content="Ba"/>
                <Button Content="Bb"/>
                <Button Content="Bc"/>
                <Button Content="Bd"/>
                <Button Content="Be"/>
                <Button Content="Bf"/>
            </UniformGrid>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Stats & Skills -->
            <StackPanel Grid.Column="0" Margin="20">

                <!-- Stats Grid -->
                <Border BorderBrush="Gray" BorderThickness="1">
                    <UniformGrid Columns="6">
                        <TextBlock Text="HP" TextAlignment="Center" FontSize="18" FontWeight="Bold"/>
                        <TextBlock Text="FOA" TextAlignment="Center" FontSize="18" FontWeight="Bold"/>
                        <TextBlock Text="FOD" TextAlignment="Center" FontSize="18" FontWeight="Bold"/>
                        <TextBlock Text="SPA" TextAlignment="Center" FontSize="18" FontWeight="Bold"/>
                        <TextBlock Text="SPD" TextAlignment="Center" FontSize="18" FontWeight="Bold"/>
                        <TextBlock Text="SPE" TextAlignment="Center" FontSize="18" FontWeight="Bold"/>
                    </UniformGrid>
                </Border>
                <UniformGrid Columns="6" Margin="0,5,0,10">
                    <TextBlock Text="35" TextAlignment="Center" FontSize="16"/>
                    <TextBlock Text="50" TextAlignment="Center" FontSize="16"/>
                    <TextBlock Text="65" TextAlignment="Center" FontSize="16"/>
                    <TextBlock Text="30" TextAlignment="Center" FontSize="16"/>
                    <TextBlock Text="60" TextAlignment="Center" FontSize="16"/>
                    <TextBlock Text="30" TextAlignment="Center" FontSize="16"/>
                </UniformGrid>


                <Border Grid.Row="1" Height="1" Background="Gray" Margin="0,20"/>

                <!-- Skills -->
                <StackPanel>
                    <TextBlock FontSize="24" Margin="0,10,0,10"><Run Text="Skill1 "/><Run FontStyle="Italic" Text="Skill1Info"/></TextBlock>
                    <TextBlock FontSize="24" Margin="0,10,0,10"><Run Text="Skill2 "/><Run FontStyle="Italic" Text="Skill2Info"/></TextBlock>
                    <TextBlock FontSize="24" Margin="0,10,0,10"><Run Text="Skill3 "/><Run FontStyle="Italic" Text="Skill3Info"/></TextBlock>
                    <TextBlock FontSize="24" Margin="0,10,0,10"><Run Text="Skill4 "/><Run FontStyle="Italic" Text="Skill4Info"/></TextBlock>
                </StackPanel>
            </StackPanel>

            <!-- Separator between Left and Right -->
            <Border Grid.Column="1" Width="1" Background="Gray" Margin="20,0"/>


            <!-- Right Stats & Skills (Duplicate of Left) -->
            <StackPanel Grid.Column="2" Margin="20">

                <Border BorderBrush="Gray" BorderThickness="1">
                    <UniformGrid Columns="6">
                        <TextBlock Text="HP" TextAlignment="Center" FontSize="18" FontWeight="Bold"/>
                        <TextBlock Text="FOA" TextAlignment="Center" FontSize="18" FontWeight="Bold"/>
                        <TextBlock Text="FOD" TextAlignment="Center" FontSize="18" FontWeight="Bold"/>
                        <TextBlock Text="SPA" TextAlignment="Center" FontSize="18" FontWeight="Bold"/>
                        <TextBlock Text="SPD" TextAlignment="Center" FontSize="18" FontWeight="Bold"/>
                        <TextBlock Text="SPE" TextAlignment="Center" FontSize="18" FontWeight="Bold"/>
                    </UniformGrid>
                </Border>
                <UniformGrid Columns="6" Margin="0,5,0,10">
                    <TextBlock Text="35" TextAlignment="Center" FontSize="16"/>
                    <TextBlock Text="50" TextAlignment="Center" FontSize="16"/>
                    <TextBlock Text="65" TextAlignment="Center" FontSize="16"/>
                    <TextBlock Text="30" TextAlignment="Center" FontSize="16"/>
                    <TextBlock Text="60" TextAlignment="Center" FontSize="16"/>
                    <TextBlock Text="30" TextAlignment="Center" FontSize="16"/>
                </UniformGrid>

                <Border Grid.Row="1" Height="1" Background="Gray" Margin="0,20"/>

                <StackPanel>
                    <TextBlock FontSize="24" Margin="0,10,0,10"><Run Text="Skill1 "/><Run FontStyle="Italic" Text="Skill1Info"/></TextBlock>
                    <TextBlock FontSize="24" Margin="0,10,0,10"><Run Text="Skill2 "/><Run FontStyle="Italic" Text="Skill2Info"/></TextBlock>
                    <TextBlock FontSize="24" Margin="0,10,0,10"><Run Text="Skill3 "/><Run FontStyle="Italic" Text="Skill3Info"/></TextBlock>
                    <TextBlock FontSize="24" Margin="0,10,0,10"><Run Text="Skill4 "/><Run FontStyle="Italic" Text="Skill4Info"/></TextBlock>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
